<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    <style>
        body {
            padding-top: 70px;
        }

        .main {
            min-height: calc(100vh - 145px);
        }
    </style>
    @RenderSection("styles", false)
</head>
<body>
    <div class="navbar bg-light navbar-expand-md border-bottom fixed-top">
        <div class="container">
            <span class="navbar-brand">MVC</span>


            <div class="navbar-collapse collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", new { }, new { @class = "nav-link" })
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Doctors", "Index", "Doctors", new { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Patients", "Index", "Patients", new { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Master/Detail", "Master", "Custom", new { }, new { @class = "nav-link" })
                    </li>
                </ul>

            </div>
        </div>
    </div>

    <main class="container main">
        @RenderBody()


    </main>
    <footer class="container bg-light border-top">
        <p>&copy; @DateTime.Today.ToString("MMM dd, yyyy") All right reserved.</p>
    </footer>
    @RenderSection("scripts", false)
</body>
</html>