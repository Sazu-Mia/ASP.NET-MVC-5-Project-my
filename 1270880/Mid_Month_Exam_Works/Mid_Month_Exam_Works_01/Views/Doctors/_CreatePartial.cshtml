@model Mid_Month_Exam_Works_01.Models.Patient
@using (Html.BeginForm("AddPatients", "Doctor", FormMethod.Post, new { id = "frm2" }))
{
    <div class="form-group row">
        <div class="col-2">
            <label>Patient Name</label>
            @Html.TextBoxFor(x => x.PatientName, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.PatientName, "", new { @class = "text-danger" })
        </div>
        <div class="col-2">
            <label>Phone</label>
            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Phone, "", new { @class = "text-danger" })
        </div>
        <div class="col-2">
            <label>Blood Group</label>
            @Html.TextBoxFor(x => x.BloodGroup, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.BloodGroup, "", new { @class = "text-danger" })
        </div>
        <div class="col-3">
            <label>Address</label>
            @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Address, "", new { @class = "text-danger" })
        </div>
        <div class="col-2 pt-4">
            
            Male
            @Html.RadioButtonFor(x => x.Gender, "Male")
            Female
            @Html.RadioButtonFor(x => x.Gender, "Female")
            @Html.ValidationMessageFor(x => x.Gender, "", new { @class = "text-danger" })
        </div>
        <div class="col-1">

            <button type="button" id="add" class="btn btn-secondary btn-sm mt-4">Add</button>
        </div>
    </div>
}

